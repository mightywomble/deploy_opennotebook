# The API URL dictates where the browser looks for the backend.
# Crucial for remote access.
API_URL=http://{{ server_ip }}:{{ backend_port }}

# -------------------------
# AI PROVIDERS
# -------------------------
{% if openai_api_key is defined %}
OPENAI_API_KEY={{ openai_api_key }}
{% endif %}
{% if google_api_key is defined %}
GOOGLE_API_KEY={{ google_api_key }}
{% endif %}
{% if anthropic_api_key is defined %}
ANTHROPIC_API_KEY={{ anthropic_api_key }}
{% endif %}

# -------------------------
# DATABASE (Do not change for single container)
# -------------------------
SURREAL_URL="ws://localhost:8000/rpc"
SURREAL_USER="{{ surreal_user }}"
SURREAL_PASSWORD="{{ surreal_pass }}"
SURREAL_NAMESPACE="open_notebook"
SURREAL_DATABASE="{{ surreal_db_name }}"